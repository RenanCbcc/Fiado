@model ListaPaginada<Nota>

@{
    ViewBag.Title = "Notas";
    var prevDisabled = Model.ProximaPagina ? "" : "disabled";
    var nextDisabled = Model.PaginaAnterior ? "" : "disabled";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-8">
                <h4>Notas</h4>
            </div>
            <div class="btn-group col-md-4 text-right">
                <a asp-controller="Nota" asp-action="Buscar" class="btn btn-secondary">
                    <i class="glyphicon glyphicon-search"></i>
                    <span>Buscar</span>
                </a>
            </div>

        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Valor</th>
                    <th>Atendente</th>
                    <th>Detalhes</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var nota in Model)
                {
                    <tr>
                        <td>@nota.Data</td>
                        <td>@nota.Valor</td>
                        <td>@nota.Atendente</td>
                        <td>@nota.Detalhes</td>
                        <td>

                            <div class="btn-group">
                                <a asp-controller="Nota" asp-action="Editar" asp-route-id="@nota.Id"
                                   class="btn btn-primary">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
                                </a>

                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer p-0">
        <nav aria-label="...">
            <ul class="pagination justify-content-end mt-3 mr-3">

                <li class="page-item @prevDisabled">
                    <a class="page-link " asp-action="Lista" asp-controller="Nota"
                       asp-route-pageNumber="@(Model.PaginaIndice - 1)">
                        Anterior
                    </a>
                </li>

                <li class="page-item @nextDisabled">
                    <a class="page-link" asp-action="Lista" asp-controller="Nota"
                       asp-route-pageNumber="@(Model.PaginaIndice + 1)">
                        Próximo
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
