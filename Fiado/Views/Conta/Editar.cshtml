@model ContaEditarViewModel

@{
    ViewBag.Title = "Editar conta";
}

<div class="card">
    <div class="card-header">
        <div class="col-md-8">
            <h4>Editar conta</h4>
        </div>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" asp-controller="Conta" asp-action="Editar" method="post" class="mt-3">

            <input hidden asp-for="Id" disabled/>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Total" class="col-form-label">Valor</label>
                    <input asp-for="Total" class="form-control" disabled>
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Status" class="col-form-label">Status</label>
                    <select asp-for="Status" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Status>()">
                        <option value="">Please Select</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <a asp-controller="Conta" asp-action="lista" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>



